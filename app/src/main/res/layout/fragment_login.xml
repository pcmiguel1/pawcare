<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log In Into Your Account"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/text_color"
                        android:textSize="25sp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"/>


                    <FrameLayout
                        android:layout_marginTop="45dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/input_background"
                        android:paddingHorizontal="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="start|center"
                            android:scaleType="centerInside"
                            android:src="@drawable/email"
                            app:tint="@color/primaryColor" />

                        <EditText
                            android:id="@+id/email_form"
                            android:layout_marginStart="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/text_color"
                            android:hint="Email"
                            android:textColorHint="@color/placeholder"
                            android:backgroundTint="@android:color/transparent"
                            android:textCursorDrawable="@null"
                            android:fontFamily="@font/urbanist_regular"
                            android:textSize="16sp"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/input_background"
                        android:paddingHorizontal="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="start|center"
                            android:scaleType="centerInside"
                            android:src="@drawable/lock"
                            app:tint="@color/primaryColor" />

                        <EditText
                            android:id="@+id/password_form"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/placeholder"
                            android:backgroundTint="@android:color/transparent"
                            android:textCursorDrawable="@null"
                            android:fontFamily="@font/urbanist_regular"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:id="@+id/showHidePw"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|center"
                            android:scaleType="centerInside"
                            android:src="@drawable/password_hide"
                            app:tint="@color/primaryColor"/>

                    </FrameLayout>

                    <CheckBox
                        android:id="@+id/check_Remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:fontFamily="@font/urbanist_regular"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center"
                        android:buttonTint="@color/primaryColor"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login_btn"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="15dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/primaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="16sp"
                        android:text="Log in"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/forgot_password_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forgot the password?"
                        android:textColor="@color/primaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="16sp"
                        android:textAlignment="center"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/form"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="or continue with"
                        android:textColor="@color/text_color2"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="18sp"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginBottom="12dp">

                        <RelativeLayout
                            android:id="@+id/facebook_btn"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/white"
                            android:layout_weight="1"
                            android:elevation="3dp"
                            android:paddingVertical="15dp"
                            android:layout_marginEnd="17.5dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/facebook" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/google_btn"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/white"
                            android:layout_weight="1"
                            android:elevation="3dp"
                            android:paddingVertical="15dp"
                            android:layout_marginStart="17.5dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/google"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account?"
                            android:fontFamily="@font/urbanist_regular"
                            android:textColor="@color/placeholder"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/signup_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign up"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="@color/primaryColor"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>



        </ScrollView>


    </LinearLayout>

</FrameLayout>