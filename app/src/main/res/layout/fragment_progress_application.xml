<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.sitterapplication.ProgressApplicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/submited"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/onboarding4"
                android:layout_gravity="center"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application already submitted!"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/text_color"
                android:layout_marginTop="15dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:text="We have received your application for pet sitting services. We appreciate your interest in our services and your willingness to take care of pets in need. Please be patient with us as we go through the evaluation process. We are committed to providing the best possible care for the animals entrusted to us, and we want to ensure that we make the right choice for both the pets and the pet sitters."
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/primaryLight2Color"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/info"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_regular"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:text="Please note, completing the application does not guarantee it will be accepted."/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/form"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step1_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:visibility="gone"
                                                android:id="@+id/step1_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"/>

                                            <TextView
                                                android:id="@+id/step1_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="1"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"
                                                android:visibility="visible"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Add detailed description of your experience and profile picture"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/status2"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step2_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:id="@+id/step2_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"
                                                android:visibility="gone"/>

                                            <TextView
                                                android:id="@+id/step2_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="2"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Add pictures of yourself with pets to your gallery"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/status2"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step3_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:id="@+id/step3_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"
                                                android:visibility="gone"/>

                                            <TextView
                                                android:id="@+id/step3_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="3"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Verify mobile phone number"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/status2"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step4_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:id="@+id/step4_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"
                                                android:visibility="gone"/>

                                            <TextView
                                                android:id="@+id/step4_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="4"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Verify your pay out information"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/status2"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step5_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:id="@+id/step5_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"
                                                android:visibility="gone"/>

                                            <TextView
                                                android:id="@+id/step5_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="5"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Provide your address"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/status2"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="17dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/step6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/step6_cardview"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:backgroundTint="@color/white"
                                            android:elevation="0dp"
                                            app:cardCornerRadius="100dp">

                                            <ImageView
                                                android:id="@+id/step6_icon"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_round_check_24"
                                                android:visibility="gone"/>

                                            <TextView
                                                android:id="@+id/step6_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="6"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/urbanist_semibold"
                                                android:textSize="15sp"
                                                android:textColor="@color/text_color"/>

                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/urbanist_bold"
                                            android:text="Select at least one service"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/arrow_right" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/start_application_btn"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="15dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/grey"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="16sp"
                        android:text="Submit for approval"
                        android:textAllCaps="false"
                        android:enabled="false"
                        android:textColor="@color/white"/>

                    <RelativeLayout
                        android:id="@+id/rlprogresstart"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/primaryColor"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/progress_login"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

    </LinearLayout>

</FrameLayout>