<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.addpet.AddPetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <include
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/browsePhoto"
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp">

                                <ImageView
                                    android:id="@+id/userPhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:src="@drawable/pet_template"/>


                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:background="@drawable/custom_button2"
                                android:backgroundTint="@color/primaryColor"
                                android:layout_gravity="right|bottom"
                                android:elevation="5dp"
                                android:layout_margin="8dp">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/edit"/>

                            </RelativeLayout>

                        </FrameLayout>

                        <TextView
                            android:layout_marginTop="45dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="18sp" />

                        <FrameLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/input_background"
                            android:paddingHorizontal="15dp"
                            android:layout_marginBottom="20dp">

                            <EditText
                                android:id="@+id/fullname_form"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/text_color"
                                android:hint="Name"
                                android:textColorHint="@color/placeholder"
                                android:backgroundTint="@android:color/transparent"
                                android:textCursorDrawable="@null"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specie of your pet"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="18sp" />

                        <FrameLayout
                            android:id="@+id/specie_form_parent"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/input_background"
                            android:paddingHorizontal="15dp"
                            android:layout_marginBottom="20dp">

                            <Spinner
                                android:id="@+id/specie_form"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="30dp"
                                android:maxLines="1"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/placeholder"
                                android:backgroundTint="@android:color/transparent"
                                android:textCursorDrawable="@null"
                                android:focusable="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|center"
                                android:scaleType="centerInside"
                                android:src="@drawable/ccp_ic_arrow_drop_down"
                                app:tint="@color/primaryColor"/>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/breed_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breed"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="18sp"
                            android:visibility="gone"/>

                        <FrameLayout
                            android:id="@+id/breed_form_parent"
                            android:visibility="gone"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/input_background"
                            android:paddingHorizontal="15dp"
                            android:layout_marginBottom="20dp">

                            <Spinner
                                android:id="@+id/breed_form"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="30dp"
                                android:maxLines="1"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/placeholder"
                                android:backgroundTint="@android:color/transparent"
                                android:textCursorDrawable="@null"
                                android:focusable="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|center"
                                android:scaleType="centerInside"
                                android:src="@drawable/ccp_ic_arrow_drop_down"
                                app:tint="@color/primaryColor"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="18sp" />

                        <FrameLayout
                            android:id="@+id/genero_form_parent"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/input_background"
                            android:paddingHorizontal="15dp"
                            android:layout_marginBottom="20dp">

                            <Spinner
                                android:id="@+id/genero_form"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="30dp"
                                android:maxLines="1"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/placeholder"
                                android:backgroundTint="@android:color/transparent"
                                android:textCursorDrawable="@null"
                                android:focusable="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|center"
                                android:scaleType="centerInside"
                                android:src="@drawable/ccp_ic_arrow_drop_down"
                                app:tint="@color/primaryColor"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth"
                            android:textColor="@color/black"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="18sp" />

                        <FrameLayout
                            android:id="@+id/date_form_parent"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/input_background"
                            android:paddingHorizontal="15dp">

                            <EditText
                                android:id="@+id/date_form"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="30dp"
                                android:inputType="date"
                                android:maxLines="1"
                                android:textColor="@color/text_color"
                                android:hint="Date of birth"
                                android:textColorHint="@color/placeholder"
                                android:backgroundTint="@android:color/transparent"
                                android:textCursorDrawable="@null"
                                android:focusable="false"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/date"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|center"
                                android:scaleType="centerInside"
                                android:src="@drawable/calendar"
                                app:tint="@color/primaryColor"/>

                        </FrameLayout>

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Additional Informations"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Vaccinated"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"
                                android:textColor="@color/text_color"/>

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:trackTint="@color/switch_track_selector"
                                android:thumbTint="@color/switch_thumb_selector"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Friendly"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"
                                android:textColor="@color/text_color"/>

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:trackTint="@color/switch_track_selector"
                                android:thumbTint="@color/switch_thumb_selector"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Microchip"
                                android:fontFamily="@font/urbanist_regular"
                                android:textSize="16sp"
                                android:textColor="@color/text_color"/>

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:trackTint="@color/switch_track_selector"
                                android:thumbTint="@color/switch_thumb_selector"/>


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/save_btn"
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/custom_button"
                            android:backgroundTint="@color/primaryColor"
                            android:fontFamily="@font/urbanist_bold"
                            android:textSize="16sp"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>