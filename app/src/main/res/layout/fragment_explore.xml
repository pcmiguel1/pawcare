<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.explore.ExploreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/userPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/profile_template"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_regular"
                            android:text="Good Morning"
                            android:textColor="@color/placeholder"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/hand"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Miguel Amaro"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <FrameLayout
                    android:id="@+id/notifications_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/notifications"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|center"
                        android:scaleType="centerInside"
                        android:src="@drawable/notification_icon" />

                    <View
                        android:id="@+id/newMessages"
                        android:layout_gravity="top|end"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_message" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/likes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/heart_icon"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/special_offers"
                    android:textColor="@color/black"
                    android:fontFamily="@font/urbanist_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="3000"
                    app:iss_placeholder="@color/white"
                    app:iss_corner_radius="20"
                    android:layout_margin="20dp"
                    app:iss_selected_dot="@drawable/slider_indicator_selected"
                    app:iss_unselected_dot="@drawable/slider_indicator_unselected"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/nearby_services"
                        android:textColor="@color/black"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textColor="@color/primaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/services"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>